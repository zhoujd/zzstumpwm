#!/bin/sh

# select window manager
echo "You can also run: $(basename $0) {stumpwm|clfswm}"

# stumpwm as default
WM_SELECT=${1:-stumpwm}

# start window manager
case $WM_SELECT in
    stumpwm )
        exec sbcl --eval '(ql:quickload :stumpwm)' \
                  --eval '(stumpwm:stumpwm)'
        ;;
    clfswm )
        exec sbcl --eval '(ql:quickload :clfswm)' \
                  --eval '(clfswm:main)'
        ;;
esac
