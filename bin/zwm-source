#!/bin/sh

## Here stumpwm is kept as default
WM_SELECT=${1:-stumpwm}

## Source zwmrc
test -f ~/.zwmrc && . ~/.zwmrc

## Start window manager
case $WM_SELECT in
    stumpwm )
        exec sbcl --eval '(ql:quickload :stumpwm)' \
                  --eval '(stumpwm:stumpwm)'
        ;;
    clfswm )
        exec sbcl --eval '(ql:quickload :clfswm)' \
                  --eval '(clfswm:main)'
        ;;
    * )
        echo "Usage: $(basename $0) {stumpwm|clfswm}"
        ;;
esac
