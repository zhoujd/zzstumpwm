#!/bin/bash
#set -x -v

ZZXMODMAP_ROOT=~/.Xmodmap.d

switch_xmodmap() {
    echo "switch to $1"
    setcapslock off
    xmodmap $1
    setcapslock off
}

case "$1" in
    "on" )
        switch_xmodmap $ZZXMODMAP_ROOT/hyper.xmodmap
        ;;
    "off" )
        switch_xmodmap $ZZXMODMAP_ROOT/default.xmodmap
        ;;
    "laptop" )
        switch_xmodmap $ZZXMODMAP_ROOT/laptop.xmodmap
        ;;
    * )
        echo "Usage: $(basename $0) {on|off|laptop}"
        ;;
esac
