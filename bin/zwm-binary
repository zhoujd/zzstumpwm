#!/bin/sh

## Here stumpwm is kept as default
WM_SELECT=${1:-stumpwm}

## Source zwmrc
test -f ~/.zwmrc && . ~/.zwmrc

## Start window manager
case "$WM_SELECT" in
    "stumpwm" )
        exec stumpwm
        ;;
    "clfswm" )
        exec clfswm
        ;;
    * )
        echo "Usage: $(basename $0) {stumpwm|clfswm}"
        ;;
esac
