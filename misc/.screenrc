### .screenrc

# remap Ctrl-a to backtick
escape ``

# 256 color term
term screen-256color

# screen buffer
defscrollback 4096

# no flash
vbell off

# no start message
startup_message off

# stop screen from catching C-S and C-Q, XON and XOFF
defflow off

# disable freezes
bind ^S
bind s

# hardstatus line
hardstatus alwaysfirstline "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %{..Y} %H "
