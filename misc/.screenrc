### .screenrc

# remap Ctrl-a to backtick
escape ``

# no start message
startup_message off

# no flash
vbell off

# enable alternative screen
altscreen on

# ignore case on searches in copy-mode
ignorecase on

# no delay after pressing escape key inside screen
maptimeout 0

# wait up to three seconds before hiding last message (default is 5 seconds)
msgwait 3

# disable utmp logging
deflogin off

# stop screen from catching C-S and C-Q, XON and XOFF
defflow off

# the dash makes it a login shell
defshell -bash

# assume UTF-8 encoding
defutf8 on

# erase background with current bg color
defbce on

# screen buffer
defscrollback 5000

# enable 256 color term
term screen-256color

# scroll
termcapinfo st* ti@:te@

# remove evil keybindings. Do Not Want!
bind ^h
bind h
bind ^Q
bind q
bind ^S
bind s
bind ^X
bind x
bind ^Z
bind z

# window numbering starts at 1, not 0.
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1

# hardstatus
hardstatus alwayslastline
hardstatus string "%{.g}%w %= %H"

# windowlist
windowlist string "%4n %h%=%f"
