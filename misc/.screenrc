### .screenrc

# remap Ctrl-a to backtick
escape ``

# 256 color term
term screen-256color

# screen buffer
defscrollback 4096

# no flash
vbell off

# no start message
startup_message off

# stop screen from catching C-S and C-Q, XON and XOFF
defflow off

# Evil evil keybindings. Do Not Want!
bind ^Q
bind q
bind ^S
bind s

# shell title
shelltitle ''

# hardstatus
hardstatus string "%{= g} %{= Lw}%-w%{=r}%n%t%{-}"
hardstatus alwaysfirstline
