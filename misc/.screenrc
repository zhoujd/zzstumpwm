### .screenrc

# remap Ctrl-a to backtick
escape ``

# enable 256 color term
term screen-256color

# fixe the "Aborted because of window size change"
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

# screen buffer
defscrollback 4096

# no flash
vbell off

# no start message
startup_message off

# stop screen from catching C-S and C-Q, XON and XOFF
defflow off

# Evil evil keybindings. Do Not Want!
bind ^h
bind h
bind ^Q
bind q
bind ^S
bind s

# hardstatus
hardstatus alwaysfirstline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %{..Y} %H"

# windowlist
windowlist string "%4n %h%=%f"
