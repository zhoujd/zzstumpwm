# .screenrc should in $HOME

# Enable 256 color term
term xterm-256color

# screen buffer
defscrollback 4096

# no flash
vbell off

# no start message
startup_message off

# status setting
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %{..Y} %m/%d %C %A "
