### .screenrc

# remap Ctrl-a to backtick
escape ``

# 256 color term
term screen-256color

# screen buffer
defscrollback 4096

# no flash
vbell off

# no start message
startup_message off

# stop screen from catching C-S and C-Q, XON and XOFF
defflow off

# Evil evil keybindings. Do Not Want!
bind ^Q
bind q
bind ^S
bind s

# hardstatus
#hardstatus string "%{= g}%{= Lw}%-w%{=r}%n%t%{-} %-= %H"
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %{..Y} %H"

hardstatus alwaysfirstline
windowlist string "%4n %h%=%f"
