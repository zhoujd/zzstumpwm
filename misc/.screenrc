### .screenrc

# remap Ctrl-a to backtick
escape ``

# enable 256 color term
term screen-256color

# screen buffer
defscrollback 4096

# no flash
vbell off

# no start message
startup_message off

# disable freezes
bind s

# hardstatus line
hardstatus alwaysfirstline "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %{..Y} %m/%d %C %A "
