!!!! xterm.ad

!! xterm set
XTerm*locale: true
XTerm*utf8Title: true

!! Chinese support
XTerm*cjkWidth: true

XTerm*fontMenu*fontdefault*Label: Default
XTerm*faceName: JetBrains Mono NL:antialias=true:size=13:minspace=true
XTerm*faceNameDoublesize: Droid Sans Fallback:antialias=true:size=13:minspace=true
XTerm*faceSize: 12
XTerm*faceSize1: 12
XTerm*faceSize2: 12
XTerm*faceSize3: 12
XTerm*faceSize4: 12
XTerm*faceSize5: 12
XTerm*faceSize6: 12

XTerm*background: black
XTerm*foreground: white

XTerm*scrollBar: false
XTerm*rightScrollBar: true
XTerm*jumpScroll: true
XTerm*SaveLines: 4096

!! For Alt keypress
Xterm*eightBitInput: false
Xterm*altSendsEscape: true

!! Copy and paste
XTerm*selectToClipboard: true
