### common.tigrc

set vertical-split = false
set ignore-case = true
set mouse = false
set main-view = line-number:no id:yes,color author:no date:no commit-title:yes,graph,refs,overflow=no
set blame-view = id:yes,color author:full date:relative-compact line-number:yes,interval=1 text
set tree-view = line-number:no,interval=5 mode file-size id:no,color author:full date:relative-compact file-name
