#!/bin/bash

## virtualbox vm
vbox_vm() {
    local full="1920x1080"
    local normal="1280x720"
    local screen=`xrandr | grep primary | awk '{print $1}'`
    local flag=`xrandr | grep primary | grep -c $full`

    if [ -z "$flag" ]; then
        xrandr --output $screen --mode "$normal"
    fi

    VBoxClient-all
}

## multi_screen for laptop
multi_screen() {
    local big=eDP-1
    local small=DP-1
    local big_flag=`xrandr | grep connected | grep -c $big`
    local small_flag=`xrandr | grep connected | grep -c $small`
    local size="1920x1080"
        
    if [ -z "$big_flag" ]; then
        xrandr --output $big --primary
    fi

    if [ -z "$small_flag" ]; then
        xrandr --output $small --same-as $big --mode "$size"
    fi
}

